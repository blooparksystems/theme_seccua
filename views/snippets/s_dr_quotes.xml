<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="s_dr_quotes" name="Quotes">
        <section class="s_dr_quotes pb32 pt32">
            <div id="s_dr_quotes" class="carousel slide dr-custom-carousel s_carousel_rounded" data-interval="10000">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#s_dr_quotes" data-slide-to="0" class="active"></li>

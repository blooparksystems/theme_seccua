<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template name="Numbers" id="s_numbers">
        <section class="s_numbers pt24 pb24" style="background-color: rgb(239, 239, 239);">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 text-center pt24 pb24">
                        <div class="s_number display-4 text-alpha oe_img_bg oe_custom_bg" style="background-image: url('/theme_seccua/static/src/img/content/s_number.png'); background-size: cover; background-position: 50% 50%;">
                            12
                        </div>
                        <h6>Useful options</h6>
                    </div>
                    <div class="col-lg-3 text-center pt24 pb24">
                        <div class="s_number display-4 text-alpha oe_img_bg oe_custom_bg" style="background-image: url('/theme_seccua/static/src/img/content/s_number.png'); background-size: cover; background-position: 50% 50%;">
                            45
                        </div>
                        <h6>Beautiful snippets</h6>
                    </div>
                    <div class="col-lg-3 text-center pt24 pb24">
                        <div class="s_number display-4 text-gamma oe_img_bg oe_custom_bg" style="background-image: url('/theme_seccua/static/src/img/content/s_number.png'); background-size: cover; background-position: 50% 50%;">
                            8
                        </div>
                        <h6>Amazing pages</h6>
                    </div>
                    <div class="col-lg-3 text-center pt24 pb24">
                        <div class="s_number display-4 text-gamma oe_img_bg oe_custom_bg" style="background-image: url('/theme_seccua/static/src/img/content/s_number.png'); background-size: cover; background-position: 50% 50%;">
                            37
                        </div>
                        <h6>Outstanding images</h6>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="s_numbers_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='background']" position="attributes">
            <attribute name="data-selector" add=".s_numbers .s_number" separator=","/>
        </xpath>
        <xpath expr="//div[@data-js='background_position']" position="attributes">
            <attribute name="data-selector" add=".s_numbers .s_number"/>
        </xpath>
    </template>

</odoo>
